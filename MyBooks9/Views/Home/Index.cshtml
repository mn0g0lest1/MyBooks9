@model IEnumerable<MyBooks9.Models.MyBooksModel>
@{
    ViewBag.Title = "Мої Книги";
}
<script>
    onload = function () { setTimeout('location.reload (true)', 60000) }
</script>
<table class="table">
    <tr><td>Назва книги</td><td>Жанр</td><td>Автор</td><td>Сторінки</td><td>Дата</td><td><a onclick="showInPopup('@Url.Action("AddOrEdit","Home",null,Context.Request.Scheme)','Добавити Книгу')" class="btn btn-success text-white"> Добавити книгу</a><input type="button" value="Обновити данні" onClick="document.location.reload(true)" class="btn btn-warning text-white"></td>
    </tr>
    @foreach (var item in Model)
    {
<tr>
    <td>@item.NameBook</td>
    <td>@item.GenreBook</td>
    <td>@item.AuthorBook</td>
    <td>@item.Pages</td>
    <td>@item.Date</td>


    <td>
        <a onclick="showInPopup('@Url.Action("AddOrEdit", "Home", new { id = item.Id }, Context.Request.Scheme)','Редагувати')" class="btn btn-info text-white"><i class="fas fa-pencil-alt"></i> Редагувати</a>
        <form asp-action="Delete" asp-route-id="@item.Id" onsubmit="return jQueryAjaxDelete(this)" class="d-inline">
            <input type="hidden" asp-for="@item.Id" />
            <input type="submit" value="Видалити" class="btn btn-danger" />
        </form>
    </td>
</tr>
                    


    }
</table>
<div class="modal" tabindex="-1" role="dialog" id="form-modal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">

            </div>
        </div>
    </div>
</div>
