@model MyBooks9.Models.MyBooksModel

@{
    Layout = null;
}

<div class="row">
    <div class="col-md-12">
        <form asp-action="AddOrEdit" asp-route-id="@Model.Id" onsubmit="return jQueryAjaxPost(this);">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="Date" />
            <div class="form-group">
                <label asp-for="NameBook" class="control-label"></label>
                <div class="input-group">
                    <input asp-for="NameBook" class="form-control" />
                </div>
                <span asp-validation-for="NameBook" class="text-danger"></span>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="GenreBook" class="control-label"></label>
                        <input asp-for="GenreBook" class="form-control" />
                        <span asp-validation-for="GenreBook" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="AuthorBook" class="control-label"></label>
                        <input asp-for="AuthorBook" class="form-control" />
                        <span asp-validation-for="AuthorBook" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Pages" class="control-label"></label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                            </div>
                            <input asp-for="Pages" class="form-control" />
                        </div>
                        <span asp-validation-for="Pages" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-6 offset-md-3">
                    <input type="submit" value="Зберегти" class="btn btn-primary btn-block" />


                </div>
            </div>
        </form>
    </div>
</div>
